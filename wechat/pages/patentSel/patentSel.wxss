@import "../wxParse/wxParse.wxss";
.head_con{
  box-sizing: border-box;
  padding: 42rpx 30rpx 0 30rpx;
  width: 100%;
  height: 155rpx;
  border-bottom: 1px solid #EEEEEE;
  overflow: hidden;
}
.headImg_con,.name_con{
  float: left;
  overflow: hidden;
}
.headImg_con{
  width: 67rpx;
  height: 68rpx;
  margin-right: 20rpx;
  margin-top: 4rpx;
}
.headLogo{
  width: 67rpx;
  height: 67rpx;
}
.jigou_name{
  font-size: 30rpx;
  color: #333333;
}
.jigou_time{
  font-size: 24rpx;
  color: #B2B2B2;
}
.pv_word{
  display: inline-block;
  margin-left: 30rpx;
}
/* ddd */
.focus{
  width: 134rpx;
  height: 60rpx;
  position: absolute;
  right: 40rpx;
  top: 50%;
  margin-top: -30rpx;
}
/*************************/
.content_title{
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  color: #353535;
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: justify;
}
.chart_img{
  display: block;
  width: 670rpx;
  height: 400rpx;
  margin: 0 auto;
}
/*************************/
.patent_sel_img{
  display: block;
  width: 352rpx;
  height: 94rpx;
  margin: 50rpx auto;
}
/*************************/
.list_item{
  position: relative;
  
}
.patent_sel_logo{
  width: 670rpx;
  height: 100rpx;
  display: block;
  margin-left: 30rpx;
}
.order{
  position: absolute;
  left: 56rpx;
  top: 18rpx;
  color: #fff;
  /* height: 30rpx; */
  /* line-height: 48rpx; */
  font-size: 48rpx;
}
.letter{
  position: absolute;
  top: 31rpx;
  left: 160rpx;
  font-size:28rpx;
  color: #fff;
}
.text_title{
  display: block;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-top: 30rpx;
  font-size: 48rpx;
  color: #232323;
  font-weight: bold;
}
.ip_info{
  box-sizing: border-box;
  color: #888;
  font-size: 26rpx;
  margin-top: 40rpx;
  padding:0 30rpx;
}
.ip_icon {
  display: block;
  width: 28rpx;
  height: 26rpx;
  float: left;
  margin: 6rpx 10rpx 0 0;
}
.person_icon{
  width: 23rpx;
  height: 24rpx;
  margin-right: 12rpx;
}
.less_margin_top{
  margin-top: 15rpx;
}
.preview{
  box-sizing: border-box;
  color: #353535;
  font-size: 32rpx;
  padding: 28rpx 30rpx;
  line-height: 56rpx;
  text-align: justify;
}
.bold{
  font-weight: bold;
}